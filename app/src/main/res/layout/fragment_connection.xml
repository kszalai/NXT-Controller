<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="roy.NXT_Control.ConnectionFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:id="@+id/connect_button"
        android:background="@drawable/custom_button"
        android:text="@string/connect_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bt_icon_black"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_icon_black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/bt_icon_black"
        android:scaleX="2"
        android:scaleY="2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_icon_blue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/bt_icon_blue"
        android:scaleX="2"
        android:scaleY="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connection_status"
        android:layout_alignBaseline="@+id/bt_icon_black"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>
        <!-- Replace with @string/connection_status later on -->

</RelativeLayout>